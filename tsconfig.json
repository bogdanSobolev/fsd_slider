{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
	},
	"include": [
		"src"
	],
    "exclude": [
        "node_modules"
    ]
}